<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiNegocio"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/SinNegocio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:id="@+id/msjCrearNegocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msjCrearNegocio"/>
        <Button
            android:id="@+id/btnRegistarMiNegocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crearNegocio"
            android:layout_below="@+id/msjCrearNegocio"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ContMiNegocio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:id="@+id/baner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#f2f"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fotoPerfilNegocio"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#ff4"
                android:layout_margin="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/NomNegocio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bsnombreNegocio" />
                <TextView
                    android:id="@+id/DescMiNegocio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bsdescripcion"
                    android:layout_below="@+id/NomNegocio"/>
                <ImageView
                    android:id="@+id/btnAgregarProducto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_add_box"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MiContenido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>